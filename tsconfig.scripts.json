{
  "compilerOptions": {
    "target": "ES2019",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "downlevelIteration": true,
    "outDir": "dist",
    "resolveJsonModule": true
  },
  "include": ["src/scripts/*.ts"],
  "exclude": ["node_modules"]
}
